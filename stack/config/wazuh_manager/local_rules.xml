<group name="local,sshd,authentication,">

  <rule id="100002" level="12" timeframe="240">
    <if_group>authentication_success</if_group>
    <if_matched_group>authentication_failures</if_matched_group>
    <same_source_ip />
    <description>SSH brute force followed by successful login from $(srcip)</description>
    <mitre>
      <id>T1078</id>
      <id>T1110</id>
    </mitre>
    <group>authentication_success,attacks,brute_force_success,</group>
  </rule>

  <rule id="100003" level="15" timeframe="300">
    <if_matched_sid>100002</if_matched_sid>
    <list field="user" lookup="not_address_match_key">etc/lists/known_users</list>
    <description>CRITICAL: SSH brute force success with unknown user $(user) from $(srcip)</description>
    <mitre>
      <id>T1078</id>
      <id>T1110</id>
      <id>T1136</id>
    </mitre>
    <group>authentication_success,attacks,unknown_user,</group>
  </rule>

</group>