<group name="syslog,attacks,">
    <rule id="100040" level="5" frequency="3" timeframe="60">
    <if_group>authentication_failures</if_group>
    <same_source_ip />
    <description>Multiple SSH failures from $(srcip)</description>
    </rule>

    <rule id="100041" level="15" timeframe="60">
    <if_matched_sid>100040</if_matched_sid>
    <if_group>authentication_success</if_group>
    <same_source_ip />
    <description>SSH success after $(frequency) failures from $(srcip)</description>
    </rule>
</group>